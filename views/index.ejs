<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Manager</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <div class="container">
            <h1>Product Management</h1>
        </div>
    </header>

    <div class="container">
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <h2>Product List</h2>
            <a href="/add" class="btn">Add New Product</a>
        </div>

        <table>
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (products && products.length > 0) { %>
                    <% products.forEach(product => { %>
                        <tr>
                            <td>
                                <% if (product.url_image) { %>
                                    <img src="<%= product.url_image %>" alt="<%= product.name %>" class="product-img">
                                <% } else { %>
                                    No Image
                                <% } %>
                            </td>
                            <td><%= product.name %></td>
                            <td>$<%= product.price %></td>
                            <td><%= product.quantity %></td>
                            <td class="actions">
                                <a href="/edit/<%= product.id %>" class="btn btn-warning">Edit</a>
                                <form action="/delete/<%= product.id %>" method="POST" onsubmit="return confirm('Are you sure?');">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="5" style="text-align: center;">No products found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>
